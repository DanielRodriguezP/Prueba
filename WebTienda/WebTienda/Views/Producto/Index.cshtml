
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header text-center">
    <h3 class="text-center">PRODUCTOS</h3>
</div>

<br/>
<br/>
<div id="divmensaje" class="text-center" hidden>
    <label id="lblmensaje"> </label>
    <div class="text-center">
        <button type="button" id="btnNotificacion">Aceptar</button>
    </div>
</div>
<div class="container  p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="">
                <div class="form-group">
                    <input type="text" id="Sku" class="form-control" value="" placeholder="Id Sku" autofocus required />
                </div>
                <div class="form-group">
                    <input type="text" id="Nombre" class="form-control" value="" placeholder="Nombre" required />
                </div>
                <div class="form-group">
                    <input type="text" id="Descripcion" class="form-control" value="" placeholder="Descripcion" required />
                </div>
                <div class="form-group">
                    <input type="text" id="valor" class="form-control" value="" placeholder="valor" required />
                </div>
                <div class="form-group">
                    <select id="cbxTienda" class="form-control" required>
                        <option value="">--Seleccione una tienda--</option>
                    </select>
                </div>
                <input type="submit" class="btn btn-primary btn-block" id="btnGuardar" name="guardar_producto" value="Guardar" /> 
                
            </div>
        </div>
        <div class="col-md-8">
            <table id="datatable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>  SKU </th>
                        <th>  NOMBRE </th>
                        <th>  DESCRIPCION </th>
                        <th>  VALOR </th>
                        <th>  NOMBRE_TIENDA </th>
                        <th>  ACCION </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/Productos.js"></script>


